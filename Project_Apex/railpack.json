{
  "$schema": "https://schema.railpack.com",
  "provider": "shell",
  "buildAptPackages": ["curl"],
  "packages": {
    "python": "3.11"
  },
  "deploy": {
    "inputs": [
      { "step": "packages:mise", "include": ["/mise/shims", "/mise/installs"] },
      { "local": true, "include": ["."] }
    ],
    "paths": ["/mise/shims"],
    "aptPackages": ["python3", "python3-pip", "python-is-python3"]
  }
}
