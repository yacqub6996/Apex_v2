# =============================================================================
# APEX TRADING - PRODUCTION CONFIG (CYBERPANEL)
# =============================================================================
PROJECT_NAME="Apex Trading Platform"
ENVIRONMENT=production
DOMAIN=apex-trading.com

# =============================================================================
# DATABASE (The Critical Fix)
# =============================================================================
# We use 'db' because that is the service name in docker-compose.yml
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_USER=apex_user
# GENERATE A REAL PASSWORD HERE!
POSTGRES_PASSWORD=put_a_complex_password_here
POSTGRES_DB=apex_db

# =============================================================================
# SECURITY
# =============================================================================
# GENERATE A NEW KEY! Run: openssl rand -hex 32
SECRET_KEY=put_a_long_random_string_here
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# =============================================================================
# FRONTEND & CORS (The Connection Fix)
# =============================================================================
FRONTEND_HOST=https://apex-trading.com

# This tells the backend to accept requests from your real domain
BACKEND_CORS_ORIGINS="https://apex-trading.com, http://apex-trading.com"

# =============================================================================
# EMAIL (CyberPanel Connection)
# =============================================================================
EMAIL_PROVIDER_PRIORITY=smtp

# We use 'host.docker.internal' to talk to CyberPanel's mail server from inside Docker
SMTP_HOST=host.docker.internal
SMTP_PORT=587
SMTP_TLS=True
SMTP_USER=support@apex-trading.com
SMTP_PASSWORD=put_your_email_password_here

EMAILS_FROM_EMAIL=support@apex-trading.com
EMAILS_FROM_NAME="Apex Support"

# =============================================================================
# AI AGENT (Enable the features you built)
# =============================================================================
# You built the agent, so we must enable it!
AI_AGENTS_ENABLED=true
OPENAI_API_KEY=sk-proj-...
DEEPSEEK_API_KEY=sk-...
AI_MODEL=gpt-4o-mini

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_JSON=true